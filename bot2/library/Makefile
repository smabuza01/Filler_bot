REMOVE = /bin/rm -f
CC = gcc
FLAGS = -c -Wall -Wextra -Werror
SOURCES = ft_isspace.c ft_bzero.c ft_atoi.c ft_putchar.c ft_putstr.c\
ft_memset.c ft_tolower.c ft_toupper.c ft_itoa.c ft_isalnum.c ft_isdigit.c\
ft_isalpha.c ft_isprint.c ft_memccpy.c ft_memchr.c ft_memcmp.c ft_memcpy.c\
ft_memmove.c ft_isascii.c ft_strchr.c ft_strrchr.c ft_strcat.c ft_strncmp.c\
ft_strcmp.c ft_strcpy.c ft_strncpy.c ft_strncat.c ft_strdup.c ft_strlen.c \
ft_strlcat.c ft_strnstr.c ft_strstr.c ft_memalloc.c ft_memdel.c \
ft_strnew.c ft_strdel.c ft_strclr.c ft_striter.c ft_striteri.c ft_strmap.c\
ft_strmapi.c ft_strequ.c ft_strnequ.c ft_strsub.c ft_strjoin.c ft_putnbr.c\
ft_strtrim.c ft_strsplit.c ft_putchar_fd.c ft_putstr_fd.c ft_putnbr_fd.c\
ft_putendl_fd.c ft_putendl.c
OBJECTS = $(SOURCES:.c=.o)

NAME = libft.a

all: $(NAME)

$(NAME): $(OBJECTS)
	ar rc $(NAME) $(OBJECTS)
	ranlib $(NAME)

$(OBJECTS): $(SOURCES)
	$(CC) $(FLAGS) $(SOURCES)

clean:
	$(REMOVE) $(OBJECTS)

fclean: clean
	$(REMOVE) $(NAME)

re: fclean all
